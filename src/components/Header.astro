<script>
    document.addEventListener("DOMContentLoaded", function () {
        var header = document.querySelector(".header");
        var hrHeader = document.querySelector(".header-hr");
        var headerLogo = document.querySelectorAll(".header-logo");
        var txtH = document.querySelectorAll(".txt-h");

        hrHeader.style.width = "160px";

        setTimeout(function () {
            for (var i = 0; i < headerLogo.length; i++) {
                headerLogo[i].style.opacity = "1";
            }

            for (var j = 0; j < txtH.length; j++) {
                txtH[j].style.opacity = "1";
            }

            setTimeout(function () {
                for (var i = 0; i < headerLogo.length; i++) {
                    headerLogo[i].style.transition = "opacity 1s";
                    headerLogo[i].style.opacity = "0";
                }

                for (var j = 0; j < txtH.length; j++) {
                    txtH[j].style.transition = "opacity 1s";
                    txtH[j].style.opacity = "0";
                }

                setTimeout(function () {
                    hrHeader.style.transition = "width 1s";
                    hrHeader.style.width = "0";

                    setTimeout(function () {
                        header.style.display = "none";
                    }, 1500);
                }, 1000); // Fade-out despuÃ©s de 1 segundo (1000 milisegundos)
            }, 10000); // Espera 10 segundos (10000 milisegundos) antes de iniciar el fade-out
        }, 4800); // Espera 4.8 segundos (4800 milisegundos) antes de aplicar el fade-in
    });
</script>
<header class="header">
    <img src="../../public/logo.jpg" alt="Waystar Royco" class="header-logo" />

